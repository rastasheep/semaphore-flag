{
  "manifest_version": 2,
  "name": "Semaphore Flag",
  "description": "Lightweight client for Semaphore CI",
  "version": "0.1",
  "offline_enabled": false,
  
  "icons": {
    "16": "/img/icon.png",
    "32": "/img/icon.png",
    "48": "/img/icon.png",
    "128": "/img/icon.png"
  },

  "app": {
    "background": {
      "scripts": ["js/background.js"]
    }
  },
  "permissions": [
    "storage",
    "notifications",
    "app.window",
    "https://semaphoreapp.com/api/v1/",
    "http://stats.pusher.com/"
  ]
}
