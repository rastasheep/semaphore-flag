{
  "manifest_version": 2,
  "name": "Semaphore flag",
  "description": "Lightweight client for Semaphore CI",
  "version": "0.1",

  "icons": {
    "16": "/images/icon.png",
    "32": "/images/icon.png",
    "48": "/images/icon.png",
    "128": "/images/icon.png"
  },

  "app": {
    "background": {
      "scripts": ["javascripts/background.js"]
    }
  },
  "permissions": [
    "storage",
    "https://semaphoreapp.com/api/v1/"
  ]
}
